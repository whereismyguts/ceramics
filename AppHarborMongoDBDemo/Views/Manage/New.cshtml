@model  Thingy
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
    List<Thingy> collection = WebDataProvider.Things();
}

<div class="items-table">
    <h2>Все штуки</h2>
    <table  cellspacing="0">
        <thead>
            <tr><th></th><th></th></tr>
        </thead>
        <tbody>

            @foreach(var thing in collection) {
                <tr>
                    <td>@thing.Name</td>
                    <td>@thing.Price</td>
                    <td title="@thing.Description">@thing.Description</td>
                    <td>
                        @if(thing.Images != null && thing.Images.Count > 0) {
                            <img src="data:image/png;base64,  @Convert.ToBase64String(thing.Images[0])">
                        }
                    </td>

                    <td><a href="/edit/@thing.Id">Редактировать</a></td>
                    <td><a href="/remove/@thing.Id">Удалить</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

